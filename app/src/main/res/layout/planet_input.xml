<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planet Parameters" />

    <EditText
        android:id="@+id/input_semi_major_axis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Semi-Major Axis" />

    <EditText
        android:id="@+id/input_eccentricity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Eccentricity" />

    <EditText
        android:id="@+id/input_orbital_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Orbital Speed" />

    <EditText
        android:id="@+id/input_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Radius" />

    <EditText
        android:id="@+id/input_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Color (#RRGGBB)" />

    <LinearLayout
        android:id="@+id/moon_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
    <Button
        android:id="@+id/btn_add_planet_to_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add" />

    <Button
        android:id="@+id/btn_add_moon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Moon" />
</LinearLayout>
