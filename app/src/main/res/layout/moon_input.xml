<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <EditText
        android:id="@+id/input_semi_major_axis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Semi-Major Axis" />

    <EditText
        android:id="@+id/input_eccentricity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Eccentricity" />

    <EditText
        android:id="@+id/input_orbital_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Orbital Speed" />

    <EditText
        android:id="@+id/input_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Radius" />

    <EditText
        android:id="@+id/input_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Color (#RRGGBB)" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add" />


</LinearLayout>
